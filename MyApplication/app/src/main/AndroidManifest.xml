<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mikhail_sianko.myapplication">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.SecondActivity"
            android:launchMode="singleTask"
            android:label="@string/label_second_activity">
            <intent-filter>
                <action android:name="second"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.LayoutsActivity"
                  android:exported="true"
                  android:theme="@style/AppTheme"
            android:label="@string/label_layouts"/>

        <receiver android:name=".data.SomeReceiver">
            <intent-filter>
                <action android:name="second"/>
            </intent-filter>

        </receiver>
    </application>

</manifest>